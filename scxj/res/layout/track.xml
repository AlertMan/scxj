<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/inspection_track_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/top_menu_bg"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="巡检轨迹" />

            <Button
                android:id="@+id/defect_track_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/top_menu_bg"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="消缺轨迹" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/list_bg"
             android:gravity="center_vertical"
            android:orientation="vertical" >

            <include
                layout="@layout/track_main" />

        </LinearLayout>

        <ListView
            android:id="@+id/track_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>
    
    <include layout="@layout/company"/>

</FrameLayout>