<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sys_set_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sys_set_bg_color"
                android:gravity="top"
                android:padding="5dip"
                android:text="轨迹记录时间间隔设置"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@drawable/move_left" />

            <EditText
                android:id="@+id/spilt_min"
                style="@style/breaker_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/edit_bg_sort"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:maxLines="1"
                android:numeric="integer"
                android:paddingLeft="2dp" />

            <TextView
                style="@style/common_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分" />

            <ImageButton
                android:id="@+id/time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/move_right" />

            <Button
                android:id="@+id/saveTrackSplitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="保存" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sys_set_bg_color"
                android:gravity="right"
                android:padding="5dip"
                android:text="用户信息设置"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/userInfoUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="更改用户信息"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/userSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="注销"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sys_set_bg_color"
                android:gravity="right"
                android:padding="5dip"
                android:text="当前轨迹记录任务名称"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sys_set_tracks_content"
                android:layout_marginLeft="10dip"
                android:layout_width="225dip"
                android:paddingLeft="20dip"
                android:layout_height="wrap_content"
                android:singleLine="false"
                 android:textSize="18sp"
                android:text="没有相关轨迹记录服务！" />

            <Button
                android:id="@+id/stopTracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="停止记录"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
             android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sys_set_bg_color"
                android:gravity="right"
                android:padding="5dip"
                android:text="离线地图导入设置"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mapDataCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="检测地图数据"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mapDataImport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:enabled="false"
                android:text="导入储存卡地图数据"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    
    <include layout="@layout/company"/>

</FrameLayout>