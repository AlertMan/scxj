<?xml version="1.0" encoding="utf-8"?>
<!-- ios 样式定制 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="ios_separate_line">#3A83B8</color>
    <color name="title_color">#ffffff</color>

    <style name="ios_default_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ios_default_button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="common_text_style">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
    </style>

    <style name="common_button_style">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="main_text_top">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_spinner">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/spinner</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="main_text_bottom">
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="main_text_right">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_text_left">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_text_left_top">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_text_right_top">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_img_style_left">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="common_img_style_right">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- table表格风格 -->
    <style name="common_table_style_left">
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@layout/list_backgrand</item>
    </style>

    <style name="common_content_forlist">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">3dip</item>
        <item name="android:layout_marginLeft">2dip</item>
        <item name="android:layout_marginRight">3dip</item>
    </style>

    <style name="list_item_seperator_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.5dip</item>
        <item name="android:background">@color/ios_separate_line</item>
    </style>

    <style name="list_item_cell_seperator_layout">
        <item name="android:layout_width">1.5dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/ios_separate_line</item>
    </style>

    <!-- 圆角listview风格 -->
    <style name="ios_listview_style">
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@layout/list_backgrand</item>
        <item name="android:cacheColorHint">#000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/ios_separate_line</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:paddingLeft">1px</item>
        <item name="android:paddingRight">1px</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- 圆角listview风格 -->
    <style name="ios_listview_style_check">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_gravity">center</item>
        <!-- <item name="android:background">@layout/list_backgrand</item> -->
        <item name="android:cacheColorHint">#000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/ios_separate_line</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:paddingLeft">1px</item>
        <item name="android:paddingRight">1px</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- listview风格 -->
    <style name="common_listview_style">
        <item name="android:cacheColorHint">#000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/ios_separate_line</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/item_bg_selector_middle</item>
    </style>

    <!-- 标题栏文本风格 -->
    <style name="ios_title_bar_text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 状态栏文本风格 -->

    <style name="ios_task_bar_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 区块标题文本风格 -->
    <style name="ios_block_title_text" parent="common_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- listview主文本风格 -->
    <style name="ios_list_main_text" parent="common_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- listview详细信息文本风格 -->
    <style name="ios_list_info_text" parent="common_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/infoTextColor</item>
    </style>

    <!-- listview主文本风格 -->
    <style name="ios_list_main_text_top" parent="main_text_top">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- listview详细信息文本风格 -->
    <style name="ios_list_info_text_bottom" parent="main_text_bottom">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/infoTextColor</item>
    </style>

    <style name="ios_list_info_text_middle">
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/infoTextColor</item>
    </style>

    <!-- 天气预报区域字体 -->
    <style name="ios_forecast_bigger">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="ios_forecast_bighold">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="ios_forecast_big">
        <item name="android:textSize">18sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="ios_forecast_middle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="ios_forecast_small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <!-- 态栏和标题栏上的按钮风格 -->

    <style name="ios_rect_button_style">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ios_rect_button_right_style" parent="ios_rect_button_style">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ios_rect_button_left_style" parent="ios_rect_button_style">
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ios_rect_button_right_bottom_style" parent="ios_rect_button_style">
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- scrollview的风格 -->
    <style name="scroll_view_style">
        <item name="android:fadingEdge">none</item>
    </style>

    <!-- 横分隔线 -->
    <style name="divider_line_style">
        <item name="android:layout_marginLeft">1px</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/ios_separate_line</item>
    </style>

    <!-- 竖分隔线 -->
    <style name="divider_vertical_line_style">
        <item name="android:layout_width">1px</item>
        <item name="android:background">@color/ios_separate_line</item>
    </style>

    <!-- EditText风格 -->
    <style name="common_edittext_style">
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- 记录表头TextView样式 -->
    <style name="maintain_listtop">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 记录内容样式 TextView -->
    <style name="maintain_listcontent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 列表列分割线 -->
    <style name="maintain_listcoldeveder">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#000</item>
    </style>
    <!-- 记录详细信息 -->
    <style name="maintain_detail_title">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="maintain_detail_content">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:editable">false</item>
    </style>
    <!-- 运行监控 -->
    <style name="common_runningstate_sub_name">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#414278</item>
    </style>

    <style name="common_runningstate_sub_content">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#414278</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/runningstate_background</item>
    </style>

    <!-- 综合管理 -->
    <style name="mul_top_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:lines">2</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 作业中心 -->
    <style name="taskcenter_app_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2a447f</item>
    </style>
    <!-- 设置作业中心一组app -->
    <style name="taskcenter_app_linestyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 设备管理 -->
    <!-- 按钮 -->
    <style name="button_devicemanager">
        <item name="android:layout_width">136dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/frag_assetmanager_selector</item>
    </style>
    <!-- 详细信息条目 -->
    <style name="device_detial">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 设备详情的设备详细信息 -->
    <style name="assetmanager_details">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 详细记录按钮样式 -->
    <style name="detailrecord_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/frag_assetmanager_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">更多</item>
    </style>
    <!-- 在线监测数据 -->
    <style name="lookingonline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#555</item>
    </style>
    <!-- 断路器分合闸 -->
    <style name="breaker_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="common_list_content">
        <item name="android:textColor">@color/list_textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="common_list_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="menu_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_style">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">3dp</item>
    </style>
    <!-- 操作指令记录 -->
    <style name="making_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

</resources>